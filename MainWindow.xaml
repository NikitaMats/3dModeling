<Window x:Class="TestCase_Sputnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Model Viewer" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель управления -->
        <StackPanel Grid.Column="0" Margin="10">
            <Button Content="Добавить куб" Click="AddCube_Click"/>
            <Button Content="Сброс" Click="ResetScene_Click"/>
        </StackPanel>

        <!-- Область 3D-визуализации -->
        <Viewport3D x:Name="Viewport" Grid.Column="1">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="5,5,5" LookDirection="-1,-1,-1"
                                  UpDirection="0,1,0" FieldOfView="60"/>
            </Viewport3D.Camera>

            <!-- Источник света -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
    </Grid>
</Window>