<Window x:Class="TestCase_Sputnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TestCase_Sputnik"
        Title="3D Model Visualizer" 
        Height="600" 
        Width="800">
    <Window.Resources>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <GroupBox Header="Transformations" Margin="0,0,0,15">
                    <StackPanel>
                        <!-- Перенос -->
                        <Expander Header="Translation">
                            <StackPanel>
                                <TextBlock Text="X:" Margin="5,5,5,0"/>
                                <TextBox x:Name="txtTranslateX" Text="0"/>

                                <TextBlock Text="Y:" Margin="5,5,5,0"/>
                                <TextBox x:Name="txtTranslateY" Text="0"/>

                                <TextBlock Text="Z:" Margin="5,5,5,0"/>
                                <TextBox x:Name="txtTranslateZ" Text="0"/>

                                <Button Content="Apply" Click="Translate_Click"/>
                            </StackPanel>
                        </Expander>

                        <Expander Header="Mirror">
                            <StackPanel>
                                <Button Content="Mirror XY" Click="MirrorXY_Click" Margin="0,5"/>
                                <Button Content="Mirror XZ" Click="MirrorXZ_Click" Margin="0,5"/>
                                <Button Content="Mirror YZ" Click="MirrorYZ_Click" Margin="0,5"/>
                            </StackPanel>
                        </Expander>

                        <!-- Вращение -->
                        <Expander Header="Rotation">
                            <StackPanel>
                                <TextBlock Text="X Angle (deg):" Margin="5,5,5,0"/>
                                <TextBox x:Name="txtRotateX" Text="0"/>

                                <Button Content="Rotate X" Click="RotateX_Click" Margin="0,5"/>

                                <TextBlock Text="Y Angle (deg):" Margin="5,5,5,0"/>
                                <TextBox x:Name="txtRotateY" Text="0"/>
                                <Button Content="Rotate Y"  Click="RotateY_Click" Margin="0,5"/>

                                <TextBlock Text="Z Angle (deg):" Margin="5,5,5,0"/>
                                <TextBox x:Name="txtRotateZ" Text="0"/>
                                <Button Content="Rotate Z"  Click="RotateZ_Click" Margin="0,5"/>
                            </StackPanel>
                        </Expander>

                        <!-- Масштабирование -->
                        <Expander Header="Scale">
                            <StackPanel>
                                <TextBlock Text="Scale Factor:" Margin="5,5,5,0"/>
                                <TextBox x:Name="txtScale" Text="1"/>

                                <Button Content="Apply Scale" Click="Scale_Click"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Projection" Margin="0,0,0,15">
                    <StackPanel>
                        <RadioButton x:Name="rbPerspective" Content="Perspective" IsChecked="True" GroupName="Projection" Checked="Projection_Changed"/>
                        <RadioButton x:Name="rbOrthographic" Content="Orthographic" GroupName="Projection" Checked="Projection_Changed"/>
                        <RadioButton x:Name="rbOrthographicFront" Content="Front View" GroupName="Projection" Checked="Projection_Changed"/>
                    </StackPanel>
                </GroupBox>

                <Button Content="Reset All" Click="Reset_Click" Margin="0,10" Background="#FFE74C3C" Foreground="White"/>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
            <Viewport3D x:Name="Viewport">
                <!-- Камера по умолчанию -->
                <Viewport3D.Camera>
                    <PerspectiveCamera 
                    Position="8,8,8" 
                    LookDirection="-1,-1,-1"
                    UpDirection="0,1,0" 
                    FieldOfView="45"
                    NearPlaneDistance="0.1"
                    FarPlaneDistance="100"/>
                </Viewport3D.Camera>

                <!-- Освещение -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="#FF404040"/>
                            <DirectionalLight Color="#FFC0C0C0" Direction="-1,-1,-1"/>
                            <DirectionalLight Color="#FF404040" Direction="1,1,1"/>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Здесь будут динамически добавляться 3D-объекты -->
            </Viewport3D>
        </Border>
    </Grid>
</Window>