<Window x:Class="TestCase_Sputnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Transformations" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Column="0" Margin="5">
            <GroupBox Header="Translation" Margin="0,5">
                <StackPanel>
                    <TextBlock Text="X:"/>
                    <TextBox x:Name="txtDx" Text="0" Margin="0,0,0,5"/>

                    <TextBlock Text="Y:"/>
                    <TextBox x:Name="txtDy" Text="0" Margin="0,0,0,5"/>

                    <TextBlock Text="Z:"/>
                    <TextBox x:Name="txtDz" Text="0" Margin="0,0,0,5"/>

                    <Button Content="Apply Translation" Click="Translate_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Rotation" Margin="0,5">
                <StackPanel>
                    <TextBlock Text="X Angle (degrees):"/>
                    <TextBox x:Name="txtRotX" Text="0" Margin="0,0,0,5"/>
                    <Button Content="Rotate X" Click="RotateX_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Scale" Margin="0,5">
                <StackPanel>
                    <TextBlock Text="Scale Factor:"/>
                    <TextBox x:Name="txtScale" Text="1" Margin="0,0,0,5"/>
                    <Button Content="Apply Scale" Click="Scale_Click"/>
                </StackPanel>
            </GroupBox>

            <Button Content="Reset" Click="Reset_Click" Margin="0,10" Padding="10,5"/>
        </StackPanel>

        <!-- 3D Viewport -->
        <Viewport3D x:Name="viewport" Grid.Column="1">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="3,3,3" LookDirection="-1,-1,-1" 
                      UpDirection="0,1,0" FieldOfView="60"/>
            </Viewport3D.Camera>

            <!-- Lighting -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <AmbientLight Color="White"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
    </Grid>
</Window>